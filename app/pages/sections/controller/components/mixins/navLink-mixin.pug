mixin navLinkContent(icon, text)
        img.me-2(src=`./assets/svg/${icon}.svg`)
        small.d-none.d-lg-inline= text

mixin navLink(active, path, icon, text)
    if active
        a.nav-link.py-0.active(href= path)
            +navLinkContent(icon, text)
    else 
        a.nav-link.py-0(href= path)
           +navLinkContent(icon, text)